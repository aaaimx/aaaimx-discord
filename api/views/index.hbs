<section class="section">
    <div class="columns">
        <div class="column is-9">
            <div class="box content">
                {{#each members}}
                <article class="post">
                    <div class="media">
                        <div class="media-left">

                            <p class="image is-48x48">
                                <img src="{{this.avatar}}" />
                            </p>
                        </div>
                        <div class="media-content">
                            <div class="content">
                                <h4>{{this.name}}</h4>
                                <a href="#">@{{this.username}}</a> joined at {{this.dateJoined}} &nbsp;
                                {{#each this.roles}}
                                <span class="tag">{{this}}</span>
                                {{/each}}
                            </div>
                        </div>
                        <div class="media-right is-hidden-mobile">
                            <span class="has-text-grey-light"><i class="fa fa-id-card"></i> {{this.id}}</span>
                        </div>
                    </div>
                </article>
                {{/each}}
                <nav class="pagination" role="navigation" aria-label="pagination">
                    <a class="pagination-previous" href="{{this.previous}}" title="This is the first page">Previous</a>
                    <a class="pagination-next" href="{{this.next}}">Next page</a>
                    {{!-- <ul class="pagination-list">
                        <li>
                            <a class="pagination-link is-current" aria-label="Page 1" aria-current="page">1</a>
                        </li>
                        <li>
                            <a class="pagination-link" aria-label="Goto page 2">2</a>
                        </li>
                        <li>
                            <a class="pagination-link" aria-label="Goto page 3">3</a>
                        </li>
                    </ul> --}}
                </nav>

            </div>
        </div>
        <div class="column is-3">
            <a class="button is-primary is-block is-alt is-large" href="#">New Post</a>
            <aside class="menu">
                <p class="menu-label">Tags</p>


                <ul class="menu-list">
                    {{#each roles}}
                    <li><span class="tag is-small" style="background-color: {{this.color}};"><a
                                href="?role={{this.name}}">{{this.name}}</a></span></li>
                    {{/each}}
                </ul>

            </aside>
        </div>
    </div>
</section>